@model Vidly.ViewModels.CustomerMembershipViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Store", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, null, new { @class = "form-control" })
    </div>
    <div class="form-group mt-3">
        @Html.LabelFor(c => c.Customer.BirthDate)
        @Html.TextBoxFor(c => c.Customer.BirthDate, null, new { @class = "form-control", @type = "date" })
    </div>
    <div class="form-group mt-3">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId,
            new SelectList(Model.MembershipTypes, "Id", "Name"),
            "Select Membership Type",
            new { @class = "form-control", @type = "date" })
    </div>
    <div class="mt-3 form-check">
        @Html.CheckBoxFor(c => c.Customer.IsSubscribedToNewsLetter, new { @class = "form-check-input" })
        @Html.LabelFor(c => c.Customer.IsSubscribedToNewsLetter, new { @class = "form-check-label" })
    </div>
    <div class="form-group mt-3">
        <button class="btn btn-primary" type="submit">Submit</button>
        <button class="btn btn-danger" type="reset">Clear</button>
    </div>
}

